{
  "name": "schmock",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "bun run --filter @schmock/core build",
    "test": "bun run --filter @schmock/core test && bun run --filter @schmock/core test:bdd",
    "test:unit": "bun run --filter @schmock/core test",
    "test:bdd": "bun run --filter @schmock/core test:bdd",
    "lint": "bun run --filter @schmock/core lint",
    "lint:fix": "bun run --filter @schmock/core lint:fix",
    "typecheck": "bun run --filter @schmock/core build:types"
  },
  "devDependencies": {
    "@arethetypeswrong/cli": "0.18.2",
    "@biomejs/biome": "2.1.2",
    "@tsconfig/strictest": "2.0.5",
    "@types/bun": "1.2.19",
    "bun-types": "1.2.19",
    "publint": "0.3.12",
    "typescript": "5.8.3"
  }
}
