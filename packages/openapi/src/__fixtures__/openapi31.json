{
  "openapi": "3.1.0",
  "info": {
    "title": "Simple API",
    "version": "3.1.0"
  },
  "paths": {
    "/items": {
      "get": {
        "operationId": "listItems",
        "responses": {
          "200": {
            "description": "List of items",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "itemId": { "type": "integer" },
                      "title": { "type": "string" }
                    },
                    "required": ["itemId", "title"]
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}
