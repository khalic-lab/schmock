{
  "swagger": "2.0",
  "info": {
    "title": "Petstore",
    "version": "1.0.0"
  },
  "basePath": "/api",
  "paths": {
    "/pets": {
      "get": {
        "operationId": "listPets",
        "tags": ["pets"],
        "parameters": [
          {
            "name": "limit",
            "in": "query",
            "type": "integer",
            "required": false
          }
        ],
        "responses": {
          "200": {
            "description": "A list of pets",
            "schema": {
              "type": "array",
              "items": {
                "type": "object",
                "required": ["petId", "name"],
                "properties": {
                  "petId": { "type": "integer" },
                  "name": { "type": "string" },
                  "tag": { "type": "string" }
                }
              }
            }
          }
        }
      },
      "post": {
        "operationId": "createPet",
        "tags": ["pets"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "required": ["name"],
              "properties": {
                "name": { "type": "string" },
                "tag": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "Pet created"
          }
        }
      }
    },
    "/pets/{petId}": {
      "parameters": [
        {
          "name": "petId",
          "in": "path",
          "type": "integer",
          "required": true
        }
      ],
      "get": {
        "operationId": "getPet",
        "tags": ["pets"],
        "responses": {
          "200": {
            "description": "A pet",
            "schema": {
              "type": "object",
              "required": ["petId", "name"],
              "properties": {
                "petId": { "type": "integer" },
                "name": { "type": "string" },
                "tag": { "type": "string" }
              }
            }
          }
        }
      },
      "put": {
        "operationId": "updatePet",
        "tags": ["pets"],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "name": { "type": "string" },
                "tag": { "type": "string" }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Pet updated"
          }
        }
      },
      "delete": {
        "operationId": "deletePet",
        "tags": ["pets"],
        "responses": {
          "204": {
            "description": "Pet deleted"
          }
        }
      }
    },
    "/health": {
      "get": {
        "operationId": "healthCheck",
        "responses": {
          "200": {
            "description": "Service health",
            "schema": {
              "type": "object",
              "properties": {
                "status": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}
