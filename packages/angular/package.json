{
  "name": "@schmock/angular",
  "version": "1.5.0",
  "description": "Angular HTTP interceptor adapter for Schmock",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "bun build:lib --watch",
    "clean": "rm -rf dist",
    "build": "bun run clean && bun run build:lib && bun run build:types",
    "build:lib": "bun build src/index.ts --outdir dist --target node --format esm --external @angular/common --external @angular/core --external @schmock/core --external rxjs",
    "build:types": "rm -f tsconfig.tsbuildinfo && tsc --build",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:bdd": "vitest run --config vitest.config.bdd.ts",
    "lint": "biome check src",
    "lint:fix": "biome check --write src",
    "check:publish": "publint && attw --pack --ignore-rules cjs-resolves-to-esm"
  },
  "peerDependencies": {
    "@angular/common": ">=15.0.0 <22.0.0",
    "@angular/core": ">=15.0.0 <22.0.0",
    "@schmock/core": "^1.0.0",
    "rxjs": "^7.0.0"
  },
  "devDependencies": {
    "@angular/common": "^21.1.3",
    "@angular/compiler": "^21.1.3",
    "@angular/core": "^21.1.3",
    "@angular/platform-browser": "^21.1.3",
    "@angular/platform-browser-dynamic": "^21.1.3",
    "@types/node": "^25.2.1",
    "jsdom": "^27.4.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18",
    "zone.js": "^0.16.0"
  }
}
